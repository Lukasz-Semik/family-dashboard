{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "plugins": [
    "simple-import-sort",
    "family-dashboard"
  ],
  "rules": {
    "simple-import-sort/imports": [
      1,
      {
        "groups": [
          [
            "^\\u0000"
          ],
          [
            "^@?\\w"
          ],
          [
            "^(@family-dashboard)(/.*|$)"
          ],
          [
            "^\\."
          ]
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
